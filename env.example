# Database - Railway automatically provides DATABASE_URL for PostgreSQL
DATABASE_URL="postgresql://username:password@hostname:port/database"
DIRECT_URL="postgresql://username:password@hostname:port/database"

# NextAuth.js - For Railway, use your Railway app URL
NEXTAUTH_URL="https://your-app-name.railway.app"
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters"

# OAuth Providers
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Communication
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_FROM=""

# External APIs
YOUTUBE_API_KEY=""
GOOGLE_DRIVE_API_KEY=""

# Encryption - Use a strong 32-character key
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Environment
NODE_ENV="production"

# Railway-specific (automatically set by Railway)
RAILWAY_ENVIRONMENT_NAME="production"
PORT="3000"

# Performance optimizations for Railway
NEXT_TELEMETRY_DISABLED="1"
SKIP_ENV_VALIDATION="true"

# Railway PostgreSQL Connection Pool (optional)
DATABASE_CONNECTION_LIMIT="10"
DATABASE_TIMEOUT="20000"
